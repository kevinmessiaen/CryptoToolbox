<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

    </style>

    <style name="AppTheme.TextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.TextAppearance.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.TextAppearance.Headline5.Inverse" parent="TextAppearance.MaterialComponents.Headline5">

    </style>

    <style name="AppTheme.TextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.Subtitle1.Inverse" parent="TextAppearance.MaterialComponents.Subtitle1">

    </style>

    <style name="AppTheme.TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">

    </style>

    <style name="AppTheme.TextAppearance.Caption.Secondary" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/colorSecondaryVariant</item>
    </style>

    <style name="AppTheme.fab" parent="Widget.MaterialComponents.FloatingActionButton">
    </style>

</resources>
